    height: 100vh;
    overflow: hidden;
}
page .mask {
    position: fixed;
    top: 100vh;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.3);
    -webkit-transition: opacity 0.3s;
    -o-transition: opacity 0.3s;
    transition: opacity 0.3s;
    z-index: 100;
}
